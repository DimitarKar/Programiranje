#include <bits/stdc++.h>
using namespace std;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    srand((unsigned)time(nullptr));

    int n = 50 + rand() % 21;
    int m = n * 3 + rand() % (n * 2);
    cout << n << " " << m << "\n";

    for (int i = 0; i < m; i++) {
        int u = 1 + rand() % n;
        int v = 1 + rand() % n;
        while (v == u) v = 1 + rand() % n;
        int w = (rand() % 4 == 0) ? -(rand() % 20 + 1) : (rand() % 20 + 1);
        cout << u << " " << v << " " << w << "\n";
    }

    int src = 1 + rand() % n;
    cout << src << "\n";
    return 0;
}
